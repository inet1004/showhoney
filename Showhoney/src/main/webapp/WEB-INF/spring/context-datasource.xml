<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

		<!-- Database Connection Pull -->
	<bean id="dataSourceSpied" class="org.apache.commons.dbcp2.BasicDataSource">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@192.168.0.93:1521:xe" />
		<property name="username" value="HYUN" />
		<property name="password" value="hyun" />
	</bean> 
	
			<!-- Database Connection Pull 
	<bean id="dataSourceSpied" class="org.apache.commons.dbcp2.BasicDataSource">
