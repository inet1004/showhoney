<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
  
<tiles-definitions>
    <definition name="layout" template="/WEB-INF/views/layout/layout.jsp">
		<put-attribute name="companyHeader" value="/WEB-INF/views/layout/customerHeader.jsp"/>
		<put-attribute name="content" value="/WEB-INF/views/main/main.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp"/>
	</definition>
	
    <!--   <definition name="admin/*/*" template="/WEB-INF/views/layout/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/layout/header.jsp"/>
		<put-attribute name="menu" value="/WEB-INF/views/layout/menu.jsp"/>
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp"/>
	</definition>	
	
	-->
	
    <definition name="no/*/*" template="/WEB-INF/views/layout/nolayout.jsp">      
      <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>
    
     <definition name="com/*/*" extends="layout"> 
      <put-attribute name="companyHeader" value="/WEB-INF/views/layout/companyHeader.jsp"/> 
      <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>
    
    <definition name="adm/*/*" extends="layout"> 
      <put-attribute name="companyHeader" value="/WEB-INF/views/layout/adminHeader.jsp"/> 
      <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>
    
	 <definition name="*/*" extends="layout">      
      <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>

</tiles-definitions>